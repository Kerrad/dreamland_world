.get_mob_index(@vnum@).@trig@ = function(mob, ch, msg) {
    // Вызывается в следующий пульс после применения эмоции msg персонажем ch.

    // Игнорируем ужимки мобов.
    if (ch.is_npc())
        return;

    // Игнорируем невидимых.
    if (!mob.can_see_mob(ch))
        return;

    // Реагируем на танцевальные эмоции.
    if (msg.match("танцует|выплясыва|пляшет|вытанцов|отплясыв")) {
        mob.say("Ты отлично танцуешь, %^C1!", ch);
        return;
    }
}

