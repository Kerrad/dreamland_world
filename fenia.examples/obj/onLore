.get_obj_index(@vnum@).@trig@ = function(obj, ch) {
    // Вернуть строку, которая выдастся персонажу по команде lore (легенды),
    // если это умение разучено выше какого-то процента.
    // Не забудьте перевод строки в конце: \n

    return .fmt("%1$^O1 оторв%1$nет|ут тебя от земли.\n", obj);
}

