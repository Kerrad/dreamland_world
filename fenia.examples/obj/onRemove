.get_obj_index(@vnum@).@trig@ = function(obj, ch) {
    // Пример простого сообщения при снятии вещи, себе и окружающим:
    ch.act("%^O1 неслышно утихает в твоих руках.", obj);
    ch.recho("%^O1 затихает в руках %C2.", obj, ch);

    // Пример для вещи, дающей аффект:
    if (ch.isAffected("haste")) {
        ch.affectStrip("haste");
        ch.act("Ты снова ощущаешь тяжесть в руках.");
        ch.recho("%1$^C1 выглядит не так%1$Gим|им|ой бодр%1$Gым|ым|ой.", ch);
    }
}
